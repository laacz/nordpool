{
    "preset": "laravel",
    "exclude": [
        "views/"
    ],
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "not_operator_with_successor_space": false,
        "single_space_around_construct": false,
        "cast_spaces": false,
        "phpdoc_align": {
            "align": "left",
            "spacing": {
                "param": 1
            }
        }
    }
}
